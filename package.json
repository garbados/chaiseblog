{
  "name": "chaiseblog",
  "version": "0.1.0",
  "description": "A simple CouchApp for blogging privately, built on [Angular.js](http://angularjs.org/) and [CouchDB](http://couchdb.apache.org/).",
  "main": "app.js",
  "devDependencies": {
    "browserify": "^9.0.8",
    "couchapp": "git://github.com/mikeal/node.couchapp.js.git",
    "cssmin": "^0.4.3",
    "jshint": "^2.7.0",
    "nano": "~4.1.1"
  },
  "scripts": {
    "test": "npm run jshint",
    "jshint": "jshint app/javascripts app/index.js",
    "browserify": "browserify app/javascripts/index.js -o app/_attachments/app.js",
    "jade": "jade --pretty app/templates --out app/_attachments",
    "cssmin": "cssmin app/stylesheets/style.css > app/_attachments/style.css",
    "mkdb": "curl -X PUT http://localhost:5984/chaiseblog",
    "deploy": "couchapp push app/index.js http://localhost:5984/chaiseblog",
    "prestart": "npm test && npm run jshint && npm run browserify && npm run jade && npm run cssmin",
    "start": "npm run mkdb; npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/garbados/chaiseblog.git"
  },
  "author": "Diana Thayer <me@dianathayer.org>",
  "license": "BSD",
  "bugs": {
    "url": "https://github.com/garbados/chaiseblog/issues"
  }
}
