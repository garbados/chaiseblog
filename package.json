{
  "name": "chaiseblog",
  "version": "0.4.0",
  "description": "A static diary that stores user data in the browser, keeping it safe with them.",
  "repository": {
    "type": "git",
    "url": "git://github.com/garbados/chaiseblog.git"
  },
  "author": "Diana Thayer <garbados@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/garbados/chaiseblog/issues"
  },
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "serve . -i node_modules .git .dat",
    "test": "standard 'index.js' 'test.js' && node test.js",
    "build": "npm run build:js && npm run build:css",
    "build:js": "browserify lib/index.js -o app.js -t [ babelify ]",
    "build:css": "node-sass style.scss app.css",
    "build-min": "npm run build && npm run build:js:min && npm run build:css:min",
    "build-min:js": "uglifyjs app.js -o app.min.js",
    "build-min:css": "node-sass --output-style compressed style.scss app.min.css",
    "watch": "nodemon --exec 'npm start' --watch 'lib/*.js'"
  },
  "dependencies": {
    "history": "^4.7.2",
    "marked": "^0.3.6",
    "pouchdb": "^6.3.4",
    "preact": "^8.2.5",
    "preact-router": "^2.5.7"
  },
  "devDependencies": {
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "bulma": "^0.5.3",
    "font-awesome": "^4.7.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "serve": "^6.2.0",
    "standard": "^10.0.3",
    "tap": "^10.7.2",
    "uglify-js": "^3.1.3"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  }
}
