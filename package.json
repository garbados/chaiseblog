{
  "name": "chaiseblog",
  "version": "0.4.0",
  "description": "A static diary that stores user data in the browser, keeping it safe with them.",
  "devDependencies": {
    "babel-preset-env": "^1.6.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "nodemon": "^1.12.1",
    "standard": "^10.0.3",
    "tap": "^10.7.2"
  },
  "scripts": {
    "test": "standard 'index.js' 'test.js' && node test.js",
    "build": "npm run build:js && npm run build:css",
    "build:js": "browserify index.js -o app.js -t [ babelify --presets [ env ] ]",
    "build:css": "cp node_modules/bulma/css/bulma.css app.css",
    "watch": "nodemon --exec 'npm run build' --watch 'index.js'"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/garbados/chaiseblog.git"
  },
  "author": "Diana Thayer <garbados@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/garbados/chaiseblog/issues"
  },
  "dependencies": {
    "backbone": "^1.3.3",
    "bulma": "^0.5.3",
    "jquery": "^3.2.1",
    "marked": "^0.3.6",
    "mustache": "^2.3.0",
    "pouchdb": "^6.3.4",
    "underscore": "^1.8.3"
  }
}
