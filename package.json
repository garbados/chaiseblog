{
  "name": "chaiseblog",
  "version": "0.2.1",
  "description": "A simple CouchApp for blogging privately, built on [Angular.js](http://angularjs.org/) and [CouchDB](http://couchdb.apache.org/).",
  "devDependencies": {
    "angular": "^1.3.15",
    "angular-route": "^1.3.15",
    "browserify": "^9.0.8",
    "couchapp": "git://github.com/mikeal/node.couchapp.js.git",
    "cssmin": "^0.4.3",
    "jade": "^1.9.2",
    "jshint": "^2.7.0",
    "marked": "^0.3.3"
  },
  "scripts": {
    "test": "npm run jshint",
    "jshint": "jshint app/javascripts app/index.js --exclude app/javascripts/behave.js",
    "browserify": "browserify app/javascripts/index.js -o app/_attachments/app.js",
    "jade": "jade app/templates -O config.json --out app/_attachments",
    "cssmin": "cssmin app/stylesheets/style.css > app/_attachments/style.css",
    "bundle": "npm run browserify && npm run jade && npm run cssmin",
    "mkdb": "curl -X PUT `cat COUCH_URL`/`cat DIARY_NAME`",
    "deploy": "npm run mkdb; couchapp push app/index.js `cat COUCH_URL`/`cat DIARY_NAME`",
    "verify": "curl --head `cat COUCH_URL`/`cat DIARY_NAME`/_design/diary/_rewrite",
    "start": "npm run bundle && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/garbados/chaiseblog.git"
  },
  "author": "Diana Thayer <me@dianathayer.org>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/garbados/chaiseblog/issues"
  }
}
