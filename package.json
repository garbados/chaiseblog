{
  "name": "chaiseblog",
  "version": "0.4.0",
  "description": "A static diary that stores user data in the browser, keeping it safe with them.",
  "devDependencies": {
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "bulma": "^0.5.3",
    "font-awesome": "^4.7.0",
    "nodemon": "^1.12.1",
    "serve": "^6.2.0",
    "standard": "^10.0.3",
    "tap": "^10.7.2"
  },
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "serve .",
    "test": "standard 'index.js' 'test.js' && node test.js",
    "build": "npm run build:js && npm run build:css",
    "build:js": "browserify index.js -o app.js -t [ babelify ]",
    "build:css": "rm app.css && npm run build:css:font && npm run build:css:bulma",
    "build:css:bulma": "cat node_modules/bulma/css/bulma.css >> app.css",
    "build:css:font": "cat node_modules/font-awesome/css/font-awesome.css >> app.css",
    "watch": "nodemon --exec 'npm start' --watch 'index.js'"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/garbados/chaiseblog.git"
  },
  "author": "Diana Thayer <garbados@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/garbados/chaiseblog/issues"
  },
  "dependencies": {
    "history": "^4.7.2",
    "marked": "^0.3.6",
    "pouchdb": "^6.3.4",
    "preact": "^8.2.5",
    "preact-router": "^2.5.7"
  }
}
