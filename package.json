{
  "name": "chaiseblog",
  "version": "0.4.0",
  "description": "A static diary that stores user data in the browser, keeping it safe with them.",
  "homepage": "https://github.com/garbados/chaiseblog",
  "repository": {
    "type": "git",
    "url": "git://github.com/garbados/chaiseblog.git"
  },
  "author": "Diana Thayer <garbados@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/garbados/chaiseblog/issues"
  },
  "scripts": {
    "postinstall": "npm run build:fonts",
    "start": "npm run build && npm run serve",
    "serve": "serve . -i node_modules .git .dat",
    "test": "eslint app/*.js",
    "build": "npm run build:js && npm run build:css",
    "build:js": "browserify app/index.js -o app.js -t [ babelify ]",
    "build:css": "node-sass style.scss app.css",
    "build:fonts": "cp -r node_modules/font-awesome/fonts fonts",
    "watch": "nodemon --exec 'npm start' --watch 'app/*.js'"
  },
  "dependencies": {
    "history": "^4.7.2",
    "pouchdb": "^6.3.4",
    "preact": "^8.2.5",
    "preact-markdown": "^0.4.0",
    "preact-router": "^2.5.7"
  },
  "devDependencies": {
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "bulma": "^0.5.3",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "font-awesome": "^4.7.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "serve": "^6.2.0",
    "tap": "^10.7.2"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  }
}
